{
  "name": "client",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "add:client": "lerna add --scope=client",
    "build": "yarn run build:client && yarn run build:server",
    "build:client": "tsc && vite build && yarn sw:build",
    "build:server": "tsc && cross-env BUILD_MODE=ssr vite build --outDir dist-ssr --ssr src/ssr-entry.tsx",
    "build:dev": "yarn sw:build && cross-env BUILD_MODE=development vite build:client && vite build:server",
    "dev": "vite",
    "dev:with-sw": "run-p --print-label sw:dev dev",
    "sw:build": "tsc --noEmit --project src/service-worker/worker/tsconfig.sw.json && yarn sw:transpile",
    "sw:transpile": "node ./scripts/transpile-sw.cjs",
    "sw:dev": "yarn sw:transpile --mode=development --watch",
    "format": "prettier --write .",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:watch": "run-p --print-label  sw:dev  'vite:build -- --watch' preview",
    "test": "jest --passWithNoTests  ./",
    "vite:build": "vite build"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "classnames": "^2.3.2",
    "dotenv": "^16.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.9.0",
    "socket.io-client": "4.6.1"
  },
  "devDependencies": {
    "@testing-library/react": "^13.3.0",
    "@types/jest": "29.5.1",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vitejs/plugin-react": "3.1.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "7.0.3",
    "cssnano": "6.0.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "29.5.0",
    "jest-environment-jsdom": "^29.0.1",
    "lefthook": "^1.1.1",
    "minimist": "1.2.8",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-extend": "1.0.5",
    "postcss-for": "2.1.1",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^11.2.2",
    "postcss-preset-env": "^8.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.2",
    "vite": "4.2.1"
  },
  "license": "MIT"
}
